@model List<CategoryViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Ekleyen</th>
        </tr>
    </thead>
    <tbody>
        @foreach(CategoryViewModel item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.AppUserId</td>
            </tr>
        }
    </tbody>
</table>

<button class="btn btn-success" onclick="GetCatgory(4)">GET</button>
<button class="btn btn-success" onclick="PostCatgory()">POST</button>
<button class="btn btn-success" onclick="PutCatgory(4)">PUT</button>
<button class="btn btn-success" onclick="DeleteCatgory(15)">DELETE</button>

<div id="result">

</div>

@section Scripts{
    <script type="text/javascript" src="~/js/index.js"></script>
}